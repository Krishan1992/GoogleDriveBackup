<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.BackupActivity"
    android:background="@color/colorPrimary"
    android:paddingTop="5dp"
    >

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Krishan Kumar Sharma"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tvEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="krishanksharma09@gmail.com"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvFullName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvMobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12345678"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailId"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMobileNo"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="5dp"
        />
</android.support.constraint.ConstraintLayout>